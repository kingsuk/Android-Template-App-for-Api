<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/padded_back">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Item Name"
                        android:textColor="@color/app_theme_color"
                        android:textStyle="bold"
                        android:id="@+id/tvItemName"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/npItemNumber"
                        android:layout_toStartOf="@+id/npItemNumber"
                        android:layout_alignBottom="@+id/tvCategoyName" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Item Price"
                        android:id="@+id/textView5"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/price"
                        android:layout_alignBottom="@+id/npItemNumber"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/npItemNumber"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="10"
                        android:padding="10dp"
                        android:id="@+id/tvItemPrice"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_toRightOf="@+id/textView5"
                        android:layout_toEndOf="@+id/textView5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Category name"
                        android:padding="10dp"
                        android:id="@+id/tvCategoyName"
                        android:layout_above="@+id/textView5"
                        android:layout_toLeftOf="@+id/npItemNumber"
                        android:layout_toStartOf="@+id/npItemNumber" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="QUANTITY"
                        android:textColor="@color/app_theme_color"
                        android:id="@+id/textView25"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>









    </LinearLayout>




</RelativeLayout>












